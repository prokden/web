<h1>New question</h1>

<%= form_with model: @question do |f| %>
   <div>
      <%= f.label :title %>
     <%= f.text_field :title, required: true, minlehgth: 2, placeholder: "Title" %>
   </div>

   <div>
      <%= f.label :body %>
      <%= f.text_area :body, required: true, minlehgth: 2, placeholder: "Body" %>
    </div>

    <%= f.submit "Submit question"%>
  <% end %>
